<div class="container p-4">
    <div class="row">
        <div class="col-md">
            <div class="card bg-dark">
                <div class="card-body">
                    <button type="button" class="btn btn-success rounded-pill" data-toggle="modal" data-target="#exampleModal">
                        Agregar <i class="fas fa-plus"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/links/product" method="POST">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Nombre Categoria</label>
                        <input type="text" class="form-control" name="categoria" required placeholder="Ingrese una categoria">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success">
                            Guardar
                        </button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">
                            Cerrar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="container p-4">
    <div class="row">
        <div class="col-md">
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="mytable" class="text-white table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Categoria</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each product}}
                                <tr>
                                    <td> {{categoria}} </td>
                                    <td class="text-center">
                                        <a href="/links/addProduct/{{id_categoria}}" class="btn btn-success"><i class="fas fa-plus"></i></a>
                                        <a href="/links/editP/{{id_categoria}}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                                        <a href="/links/deleteP/{{id_categoria}}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Categoria</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

