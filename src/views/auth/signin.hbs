<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card animate__animated animate__backInLeft text-center shadow">
                <div class="card-header bg bg-light" id="logoLogin">
                    <img src="/img/logoLogin.png">
                </div>
                <div class="card-body">
                    <form class="form" action="/signin" method="POST">
                        <div class="form-group p-2">
                            <input type="type" name="usuario" placeholder="Usuario" class="form-control" autofocus>
                        </div>
                        <div class="form-group p-2">
                            <input type="password" name="contraseña" placeholder="Contraseña" class="form-control">
                        </div>
                        <div class="form-group p-2">
                            <button class="btn btn-success">
                                Iniciar sesión
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>