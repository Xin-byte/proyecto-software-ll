<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <i class="fas fa-users fa-4x"></i>
                </div>
                <div class="card-body">
                    <form action="/signup" method="POST">
                        <div class="form-group">
                            <label for="" class="card text-left">Usuario</label>
                            <input type="type" name="usuario" placeholder="Usuario" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <label for="" class="card text-left">Contraseña</label>
                            <input type="password" name="contraseña" placeholder="Password" class="form-control">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success">
                                <i class="fas fa-sign-in-alt"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>